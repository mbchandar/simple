<h2>Change Password</h2>
<% form_tag (:action => 'change_password') do %>
  <p>
  <label for="old_password" class="block">Old Password</label><br/>
  <%= password_field_tag 'old_password', @old_password, :size => 20, :class => 'text' %>
</p>
<p>
  <label for="password" class="block">New Password</label><br/>
  <%= password_field_tag 'password', {}, :size => 20, :class => 'text' %>
  <span><small>Between 4 and 40 characters</small></span>
</p>
<p>
  <label for="password_confirmation"  class="block">Confirm new password</label><br/>
  <%= password_field_tag 'password_confirmation', {}, :size => 20, :class => 'text' %>
</p>
  <%= submit_tag 'Change password' %>

<%end%>

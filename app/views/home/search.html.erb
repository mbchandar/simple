<div id="main">
  <%= render :partial => "notice"  %>
  <h2>Products matching your keyword '<%=@search%>'</h2>
  <% for product in @products %>
    <table border="0">
      <tr>
        <td>
          <img width="200" height="200" src="<%= product.image_url %>"/>
        </td>
        <td valign="top">
          <p>
            <b><%=h product.title %></b>
          </p>
          <p>
            <%=h(truncate(product.description,500)) %>
          </p>
          <p>
            <b>Price:</b>
            <%=h product.price %>
          </p>
          <p>
            <b><%= link_to 'Add to Cart',
                {:action => 'add_to_cart', :id => product },
                :class => 'addtocart' %></b> |
            <b><%= link_to 'Read More',
              {:controller =>'products',:action => 'show', :id => product } %></b>
            <br/>
          </p>
        </td>
      </tr>
    </table>
  <% end %>
</div>
<%= render :partial => "side"  %>


<h1>Listing offers</h1>

<table>
  <tr>
    <th>Sku</th>
    <th>List price</th>
    <th>Offer price</th>
    <th>Quantity</th>
    <th>Date available</th>
    <th>Expired at</th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%=h offer.sku %></td>
    <td><%=h offer.list_price %></td>
    <td><%=h offer.offer_price %></td>
    <td><%=h offer.quantity %></td>
    <td><%=h offer.date_available %></td>
    <td><%=h offer.expired_at %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New offer', new_offer_path %>